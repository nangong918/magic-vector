<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.view.appview.call.CallDialog"
    tools:background="@color/black">

    <LinearLayout
        android:background="@drawable/bg_white_top_shape20"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="650dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <ImageView
                android:id="@+id/v_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:src="@xml/close_24px"
                android:tint="@color/green_900"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="300dp"
                android:gravity="center"
                android:maxLines="1"
                android:layout_height="wrap_content"
                tools:text="AgentName"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFBBBBBB"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvg_avatar"
            tools:src="@mipmap/logo"
            app:riv_corner_radius="25dp"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/tv_chatState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            tools:text="用户正在讲话"
            android:textColor="@color/green_900"/>

        <TextView
            android:id="@+id/tv_chatMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            tools:text="又见面了，真是麻烦。
天气不错，要不要一起走走？
别以为我会特意等你。
快点跟上，别掉队了。
……你要是敢走丢，我可不会去找你。"
            android:textColor="@color/green_900"/>

        <com.view.appview.voice.VoiceWaveView
            android:id="@+id/v_userVoiceWave"
            android:background="@color/green_10"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_mic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@xml/mic_24px"
                android:padding="10dp"
                android:background="@drawable/round_grey_400"/>

            <ImageView
                android:id="@+id/iv_call_end"
                android:layout_marginStart="90dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@xml/call_end_24px"
                android:padding="10dp"
                android:background="@drawable/round_red"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>